<%- include ('./partials/header.ejs') %>
<%- include ('./partials/navbar.ejs') %>
    <h1 class="display-3">Cadastro de Consulta</h1>
    <hr>
    <form method="POST" action="create">
        <input type="text" name="name" id="name" placeholder="Nome do paciente" class="form-control"><br>
        <input type="email" name="email" id="email" placeholder="email@email.com" class="form-control"><br>
        <input type="text" name="cpf" id="cpf" placeholder="CPF" class="form-control cpf"><br>
        <input type="text" name="description" id="description" placeholder="Descrição" class="form-control"><br>
        <input type="date" name="date" id="date" class="form-control"><br>
        <input type="time" name="time" id="time" class="form-control">        <br>
        <div class="d-grid gap-2">
            <input type="submit" class="btn btn-primary" value="Agendar">
        </div>
    </form>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
<script src="jquery.mask.min.js"></script>
<script>
    $('.cpf').mask('000.000.000-00');
</script>
<style>
    form {
        display: flex;
        flex-direction: column;
        width: 50rem;
    }
    h1, .card, form {
        margin-left: 15px
    }
</style>
</html>